{
  "python.defaultInterpreter": "python3",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.pycodestyleEnabled": true,
  "python.linting.pyflakesEnabled": true,
  "pyright.enable": true,
  "pyright.completion.importSupport": true,
  "pyright.completion.snippetSupport": true,
  "clangd": {
    "command": "clangd",
    "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
    "filetypes": ["c", "cpp", "objc", "objcpp"]
  },
  "coc.preferences.formatOnSaveFiletypes": [],
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.snippetStatusText": "SNIP",
  "diagnostic.displayByAle": false,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.signOffset": 1,
  "diagnostic.errorSign": "✗",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.refreshAfterSave": true,
  "diagnostic.checkCurrentLine": true,
  "suggest.enablePreview": true,
  "suggest.maxCompleteItemCount": 25,
  "suggest.timeout": 3000,
  "suggest.noselect": false,
  "suggest.minTriggerInputLength": 1,
  "suggest.triggerAfterInsertEnter": false,
  "suggest.autoTrigger": "always",
  "suggest.snippetIndicator": " ►",
  "signature.enable": true,
  "signature.target": "float",
  "signature.triggerSignatureHelp": true,
  "hover.target": "float",
  "hover.autoHide": true,
  "codeLens.enable": true,
  "completion.enable": true,
  "completion.triggerAfterInsertEnter": false,
  "completion.enablePreview": true,
  "completion.acceptSuggestionOnCommitCharacter": true,
  "inlayHint.enable": true,
  "semanticTokens.enable": true,
  "list.indicator": ">",
  "list.selectedSignText": "→",
  "list.maxHeight": 12,
  "workspace.ignoredFolders": ["$HOME", "$HOME/.cargo", "$HOME/.rustup", "**/node_modules", "**/.git", "**/venv", "**/__pycache__"],
  "coc.filetypes": ["c", "cpp", "python", "javascript", "typescript", "java", "ruby", "css", "html", "json", "yaml", "xml"],
  "coc.preferences.disabledFiletypes": ["text", "markdown", "md", "txt", "rst", "org", "tex", "latex", "asciidoc", "gitcommit", "mail", "notes", "journal", "diary"],
  "suggest.disableKinds": {
    "text": ["text", "snippet"],
    "markdown": ["text", "snippet"],
    "md": ["text", "snippet"],
    "txt": ["text", "snippet"],
    "rst": ["text", "snippet"],
    "org": ["text", "snippet"],
    "tex": ["text", "snippet"],
    "latex": ["text", "snippet"],
    "asciidoc": ["text", "snippet"],
    "gitcommit": ["text", "snippet"],
    "mail": ["text", "snippet"]
  },
  "diagnostic.disabledFiletypes": ["text", "markdown", "md", "txt", "rst", "org", "tex", "latex", "asciidoc", "gitcommit", "mail", "notes", "journal", "diary"],
  "completion.disableFiletypes": ["text", "markdown", "md", "txt", "rst", "org", "tex", "latex", "asciidoc", "gitcommit", "mail", "notes", "journal", "diary"],
  "hover.disableFiletypes": ["text", "markdown", "md", "txt", "rst", "org", "tex", "latex", "asciidoc", "gitcommit", "mail", "notes", "journal", "diary"],
  "signature.disableFiletypes": ["text", "markdown", "md", "txt", "rst", "org", "tex", "latex", "asciidoc", "gitcommit", "mail", "notes", "journal", "diary"],
  "codeLens.disableFiletypes": ["text", "markdown", "md", "txt", "rst", "org", "tex", "latex", "asciidoc", "gitcommit", "mail", "notes", "journal", "diary"],
  "semanticTokens.disableFiletypes": ["text", "markdown", "md", "txt", "rst", "org", "tex", "latex", "asciidoc", "gitcommit", "mail", "notes", "journal", "diary"]
}